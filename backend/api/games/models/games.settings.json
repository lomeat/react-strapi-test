{
  "kind": "collectionType",
  "collectionName": "games",
  "info": {
    "name": "games"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "Title": {
      "type": "string"
    },
    "Description": {
      "type": "richtext"
    },
    "ReleaseDate": {
      "type": "date",
      "default": "2020-07-01T09:00:00.000Z",
      "required": false
    },
    "Poster": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images",
        "files",
        "videos"
      ],
      "plugin": "upload",
      "required": false
    }
  }
}
